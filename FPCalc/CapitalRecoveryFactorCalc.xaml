<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FPCalc.CapitalRecoveryFactorCalc"
    Title="元本を一定利率で運用しながら取り崩すといくらになるか"
    Visual="Material">
    <StackLayout Padding="30">
        <Label Text="年金原資(円)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="PensionFund"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Label Text="年利率(%)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="AnnualInterestRate"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Label Text="受取年数(年)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="ReceivedYears"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Button x:Name="CalcButton" Text="計算する"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>
