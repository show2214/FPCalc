<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FPCalc.CurrentPentionFactorCalc"
    Title="一定期間一定額受け取るためにいくら必要か"
    Visual="Material">
    <StackLayout Padding="30">
        <Label Text="年金金額(円/年)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="PentionAmount"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Label Text="年利率(%)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="AnnualInterestRate"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Label Text="積立年数(年)"
               FontSize="Large"
               VerticalOptions="Center"
               HorizontalOptions="StartAndExpand"/>
        <Editor x:Name="AccumulatedYears"
                BackgroundColor="#C3C3C3"
                Keyboard="Numeric"/>
        <Button x:Name="CalcButton" Text="計算する"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>
